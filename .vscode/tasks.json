{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "${relativeFile}",
                "-o",
                "debug/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Run C++ on Text I/O",
            "type": "shell",
            "command": "debug\\${fileBasenameNoExtension}.exe",
            "args": [
                "<",
                "input.txt",
                ">",
                "output.txt"
            ],
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\cmd.exe",
                    "args": ["/c"]  // Use "/c" to run the command and exit
                }
            },
            "dependsOn": [
                "Build C++"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
            },
        }
    ]
}